<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <!-- Header Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/header_gradient"
            android:padding="24dp"
            android:gravity="center">

          =
            <TextView
                android:text="Image Picker"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:letterSpacing="0.05"
                android:gravity="center"
                android:shadowColor="#40000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Select and manage your images"
                android:textSize="14sp"
                android:textColor="#F0F0F0"
                android:letterSpacing="0.05"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Content Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Image Preview Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@android:color/white">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@android:drawable/ic_menu_gallery"
                        android:scaleType="centerCrop"
                        android:contentDescription="Selected Image"/>

                    <!-- Placeholder overlay when no image -->
                    <LinearLayout
                        android:id="@+id/placeholderOverlay"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="#F5F5F5"
                        android:padding="32dp"
                        android:visibility="gone">

                        <TextView
                            android:text="ðŸ–¼ï¸"
                            android:textSize="80sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"/>

                        <TextView
                            android:text="No Image Selected"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#9E9E9E"
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="Tap the button below to choose"
                            android:textSize="14sp"
                            android:textColor="#BDBDBD"
                            android:gravity="center"
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <!-- Action Buttons Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:text="ACTIONS"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#9E9E9E"
                        android:letterSpacing="0.15"
                        android:layout_marginBottom="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <!-- Pick Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPick"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Pick from Gallery"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05"
                        app:backgroundTint="#EC407A"
                        android:textColor="@android:color/white"
                        app:cornerRadius="14dp"
                        app:elevation="4dp"
                        app:icon="@android:drawable/ic_menu_gallery"
                        app:iconGravity="textStart"
                        app:iconTint="@android:color/white"/>

                    <!-- Clear Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnClear"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="Clear Image"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05"
                        app:backgroundTint="#F48FB1"
                        android:textColor="@android:color/white"
                        app:cornerRadius="14dp"
                        app:elevation="4dp"
                        app:icon="@android:drawable/ic_menu_delete"
                        app:iconGravity="textStart"
                        app:iconTint="@android:color/white"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Bottom Spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="32dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
