<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background">

    <!-- Header Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/header_gradient"
            android:padding="24dp"
            android:gravity="center">


            <TextView
                android:text="My Notes"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:letterSpacing="0.05"
                android:gravity="center"
                android:shadowColor="#40000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Keep your thoughts organized"
                android:textSize="14sp"
                android:textColor="#F0F0F0"
                android:letterSpacing="0.05"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Content Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Note Editor Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:text="COMPOSE NOTE"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#9E9E9E"
                        android:letterSpacing="0.15"
                        android:layout_marginBottom="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundMode="outline"
                        app:boxStrokeColor="#EC407A"
                        app:boxStrokeWidth="2dp"
                        app:hintTextColor="#EC407A"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusBottomEnd="16dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etNote"
                            android:hint="Write your note here..."
                            android:textColor="#212121"
                            android:textSize="16sp"
                            android:minLines="10"
                            android:maxLines="15"
                            android:gravity="top|start"
                            android:paddingVertical="16dp"
                            android:lineSpacingExtra="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Action Buttons Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:text="ACTIONS"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#9E9E9E"
                        android:letterSpacing="0.15"
                        android:layout_marginBottom="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <!-- Save Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSave"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Save Note"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05"
                        app:backgroundTint="#EC407A"
                        android:textColor="@android:color/white"
                        app:cornerRadius="14dp"
                        app:elevation="4dp"
                        app:icon="@android:drawable/ic_menu_save"
                        app:iconGravity="textStart"
                        app:iconTint="@android:color/white"/>

                    <!-- Load Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnLoad"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="Load Last Note"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05"
                        app:backgroundTint="#F48FB1"
                        android:textColor="@android:color/white"
                        app:cornerRadius="14dp"
                        app:elevation="4dp"
                        app:icon="@android:drawable/ic_menu_revert"
                        app:iconGravity="textStart"
                        app:iconTint="@android:color/white"/>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F0F0F0"
                        android:layout_marginVertical="16dp"/>

                    <!-- Delete Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDelete"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Delete Note"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.05"
                        app:backgroundTint="#E53935"
                        android:textColor="@android:color/white"
                        app:cornerRadius="14dp"
                        app:elevation="4dp"
                        app:icon="@android:drawable/ic_menu_delete"
                        app:iconGravity="textStart"
                        app:iconTint="@android:color/white"/>

                    <!-- Info text -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/info_background"
                        android:padding="12dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:text="ℹ️"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="Your notes are saved locally on your device"
                            android:textSize="12sp"
                            android:textColor="#757575"
                            android:layout_marginStart="8dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Bottom Spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="32dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

